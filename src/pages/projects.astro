---
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";
import ProjectCard from "@/components/custom/ProjectCard.astro";
import HeaderSmall from "../components/HeaderSmall.astro";
// import ProjectCard from "../components/ProjectCards.astro";
import data from "../data/site.json";
const title = "Projects";
const subtitle = "Some projects we've worked on";
const allProjects = await getCollection("projects");

type Props = {
  projectTitle: string;
  href: string;
  body: string;
  type?: string;
  repo?: string;
};
---

<Layout title={title} description="A list of some projects we've worked on">
  <main>
    <HeaderSmall title={title} subtitle={subtitle} />
    <div class="">
      <section class="section">
        <div
          id="gallery"
          class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3"
        >
          {allProjects.map((project) => <ProjectCard project={project} />)}
          <!-- put back gallery -->
        </div>
