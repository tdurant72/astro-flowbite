---
interface Props {
  text: string;
  href: string;
  bdColor?: string;
  bgColor?: string;
  textColor: string;
  textSize?: string;
  textWeight?: string;
  target?: string;
}

const {
  text,
  href,
  textColor,
  bdColor = "border-primaryMed",
  bgColor = "bg-white",
  textSize = "text-sm",
  textWeight = "font-medium",
  target = "_self",
} = Astro.props;
---

<a
  href={href}
  target={target}
  class=`${textColor} ${bgColor} focus:outline-none cursor-pointer focus:ring-2 rounded-full ${textSize} px-2 md:px-5  py-1 md:py-2.5 text-center border border-2 ${bdColor} ${textWeight}`
  >{text}</a
>
