---
interface Props {
  text: string;
  href: string;
  bgColor: string;
  textColor: string;
}

const { text, href, textColor, bgColor } = Astro.props;
---

<a
  href={href}
  class=`text-sm font-semibold cursor:pointer leading-6 text-${textColor} dark:text-white border-2 border-${bgColor} font-medium rounded-full text-sm px-5 py-2.5`
  >{text}</a
>
