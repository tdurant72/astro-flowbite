---
import { Image } from "astro:assets";
import Button from "./Button.astro";
import ButtonAlt from "./ButtonAlt.astro";

import siteImage from "../../public/images/eagles-device.webp";

const title = "Let's turn your website to a customer magnet";
const body =
  "Our simple 8-point plan will increase your customer base in 90 days.";
const buttonText = "Get Started";
const buttonLink = "https://www.google.com";
const buttonTwoText = "Get Started";
const buttonTwoLink = "https://www.google.com";
---

<section class="bg-stone-100 dark:bg-slate-800">
  <div
    class="grid max-w-screen-xl px-4 py-8 mx-auto lg:gap-8 xl:gap-0 lg:py-16 lg:grid-cols-12"
  >
    <div class="mr-auto place-self-center lg:col-span-7">
      <h1
        class="text-primary-700 drop-shadow-[2px_2px_var(--tw-shadow-color)] shadow-gray-800 max-w-2xl mb-4 text-4xl font-extrabold tracking-tight leading-none md:text-5xl xl:text-6xl dark:text-white"
      >
        {title}
      </h1>
      <p
        class="max-w-2xl mb-6 font-light text-gray-700 lg:mb-8 text-lg md:text-xl lg:text-2xl dark:text-gray-400"
      >
        {body}
      </p>
      <Button
        text={buttonText}
        href={buttonLink}
        bgColor="primary"
        textColor="primary-900"
      />
      <span class="mr-4"></span>
      <ButtonAlt
        text={buttonTwoText}
        href={buttonTwoLink}
        bgColor="primary-700"
        textColor="primary-700"
      />
    </div>
    <div class="hidden lg:mt-0 lg:col-span-5 lg:flex">
      <!-- <img
        src="https://flowbite.s3.amazonaws.com/blocks/marketing-ui/hero/phone-mockup.png"
        alt="mockup"
      /> -->
      <Image
        src={siteImage}
        width={211}
        height={425}
        alt="Site Image"
        class="dark:hidden ease-in-out duration-300 hover:rotate-1 hover:scale-105"
      />
      <Image
        src={siteImage}
        width={211}
        height={425}
        alt="Site Image"
        class="hidden dark:block ease-in-out duration-300 hover:rotate-1 hover:scale-105"
      />
    </div>
  </div>
</section>
