---
import { Image } from "astro:assets";
import Button from "../Button.astro";
import ButtonAlt from "../ButtonAlt.astro";
import VideoModal from "./VideoModal.astro";

import Modal from "../Modal.astro";

import siteImage from "../../../public/images/eagles-device.webp";

const title = "Let's turn your website into a customer magnet";
const body =
  "Our simple 8-point plan will increase your page speed, help you rank higher in search engines, and expand customer base, all in 90 days";
const buttonText = "Contact Us";
const buttonLink = "/#contact-us";
const buttonTwoText = "Get Started";
const buttonTwoLink = "https://www.google.com";
---

<section
  class="bg-slate-50 dark:bg-slate-800 lg:h-full section-parallax mt-10 md:mt-4"
>
  <div
    class="grid max-w-(--breakpoint-xl) px-4 py-8 mx-auto lg:gap-8 xl:gap-0 lg:py-16 lg:grid-cols-12"
  >
    <div class="mr-auto place-self-center lg:col-span-7 copy-parallax">
      <h1
        class="text-primaryMed drop-shadow-[2px_2px_var(--tw-shadow-color)] shadow-gray-800 max-w-2xl mb-6 text-4xl font-extrabold tracking-tight leading-none md:text-5xl xl:text-6xl dark:text-white animate__animated animate__fadeInUp animate__delay-1s"
      >
        We Build Blazing Fast Websites That Convert
      </h1>
      <p
        class="max-w-2xl mb-6 font-light text-gray-700 lg:mb-8 text-lg md:text-xl lg:text-2xl dark:text-gray-400"
      >
        Transform Your Online Presence in 90 Days
      </p>
      <ul class="list-disc list-outside my-2 ml-8">
        <li>Lightning-quick, modern sites that captivate customers</li>
        <li>Boost your search engine rankings</li>
        <li>Expand your customer base</li>
      </ul>
      <p
        class="max-w-2xl my-6 font-light text-gray-700 lg:mb-8 text-lg md:text-xl lg:text-2xl dark:text-gray-400"
      >
        Risk-Free Offer: Get your homepage designed or redesigned <span
          class="text-primary-800 underline">100% free</span
        >
      </p>
      <p
        class="max-w-2xl mb-6 font-light text-gray-700 lg:mb-8 text-lg md:text-xl lg:text-2xl dark:text-gray-400"
      >
        No strings attached. No obligation. Just results. Ready to dominate
        online? Let's talk.
      </p>
      <div
        class="animate__animated animate__zoomIn animate__delay-3s flex space-x-5 items-start"
      >
        <Button text={buttonText} href={buttonLink} />

        <ButtonAlt
          textColor="primaryMed"
          text="Schedule an appointment"
          href="https://calendar.app.google/qFjCk6JDCAxQkDPL7"
          target="_blank"
        />
      </div>
      <span
        class="text-xs mx-4 animate__animated animate__zoomIn animate__delay-3s"
        >We will never share your information</span
      >
      <span class="mr-4"></span>
    </div>
    <div
      id="hero-graphic"
      class="hidden lg:mt-0 lg:col-span-5 lg:flex lg:justify-center overflow-hidden"
    >
      <Image
        src={siteImage}
        alt="Site Image"
        loading="eager"
        class="rotate-2 dark:hidden ease-in-out duration-300 hover:rotate-0 animate__animated animate__fadeInUp animate__delay-2s w-[211px] h-[425px]"
      />
      <Image
        src={siteImage}
        alt="Site Image"
        loading="eager"
        class="image-parallax hidden dark:block ease-in-out duration-300 hover:rotate-1 w-[211px] h-[425px]"
      />
    </div>
  </div>
</section>

<style>
  .section-parallax {
    transform-style: preserve-3d;
    z-index: -1;
  }
  .image-parallax {
    transform: translateZ(-16px) scale(2);
  }
  @keyframes float {
    0% {
      transform: translate3d(0, 0, 0);
    }

    100% {
      transform: translate3d(0, 30px, 0);
    }
  }

  #hero-graphic {
    animation: float ease-in-out 5.5s infinite alternate;
  }
</style>
