const pricing = [
  {
    name: "Affordable Single Page Website Design",
    image: "/images/business1.webp",
    price: "$499",
    description: "Best option for personal use or a digital business card.",
    features: [
      {
        name: "Great for those just starting out.",
        icon: "heroicon-o-check-circle",
      },
      {
