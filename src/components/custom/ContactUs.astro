---
import Button from "../Button.astro";
import ContactForm from "./ContactForm.astro";

const heading = "Free landing page audit";
---

<section class="bg-slate-100 dark:bg-primaryBlk px-4 py-4" id="contact-us">
  <div class="mt-16 max-w-2xl">
    <div class="p-2 mb-8">
      <h4 class="ml-8 mt-6 text-xl leading-8 text-primaryDrk dark:text-white">
        Contact Us
      </h4>
      <h2
        class="ml-8 text-2xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-6xl"
      >
        {heading}
      </h2>
    </div>
  </div>
  <div class="flex flex-col md:flex-row gap-x-16">
    <div class="lg:w-1/2">
      <ContactForm />
    </div>
    <div class="lg:w-1/2">
      <h3 class="text-primaryBlk text-3xl mb-12">Get in touch</h3>
      <h4 class="mb-2 text-primaryBlk">Location 1</h4>
      <p class="mb-8 text-primaryDrk">Greensboro, NC</p>
      <h4 class="mb-2 text-primaryBlk">Location 2</h4>
      <p class="mb-8 text-primaryDrk">Atlanta, GA</p>
      <p class="mb-4 mt-12 text-primaryDrk">
        Email directly: <a href="mailto:todurant@sublimeux.com"
          >todurant@sublimeux.com</a
        >
      </p>
      <p class="mb-4 text-primaryDrk">
        Sublime UX: <a href="tel:3365177923">(336) 517-7923</a>
      </p>
    </div>
  </div>
</section>
