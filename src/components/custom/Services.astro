---
import { Button } from "../ui/button";

const features = [
  {
    id: 1,
    name: "Build Your Brand",

    description: "Stand out from the competition and build credibility.",
    icon: "../src/assets/icons/monitor.webp",

    cta: "Our Approach To Branding",
    ctaLink: "/services#design",
  },
  {
    id: 2,
    name: "Increase Traffic",

    description:
      "Attract more organic traffic to your website, by optimizing your website for search engines,",
    icon: "../src/assets/icons/rocket.webp",
    cta: "How We Optimize Sites",
    ctaLink: "/services#seo",
  },
  {
    id: 3,
    name: "Grow Your Business",

    description:
      "Encourage your visitors to take action, this can lead to more sales and revenue for your business.",
    icon: "../src/assets/icons/banner.webp",
    cta: "Why User Experience Matters",
    ctaLink: "/services#growth",
  },
];
---

<section class="bg-linear-to-b from-teal-500 to-gray-100 dark:bg-slate-800">
  <div class="py-8 px-4 mx-auto max-w-(--breakpoint-xl) lg:py-16 lg:px-6">
    <div class="mx-auto max-w-(--breakpoint-md) text-center mb-8 lg:mb-12">
      <h2
        class="mb-4 text-2xl md:text-4xl tracking-tight font-extrabold text-gray-900 dark:text-white"
      >
        Web Design, Web Development, SEO & Branding
      </h2>
      <h3
        class="mb-5 font-light md:text-2xl text-primaryBlk text-xl dark:text-gray-400"
      >
        Your business needs more than a website. Thatâ€™s why Sublime UX is here
        to:
      </h3>
    </div>
    <div class="space-y-8 lg:grid lg:grid-cols-3 gap-6 xl:gap-10 lg:space-y-0">
      <div
        class="grid grid-cols-1 justify-items-center items-center p-6 mx-auto max-w-lg text-center text-gray-900 bg-white rounded-lg border border-gray-100 shadow dark:border-gray-600 xl:p-8 dark:bg-gray-800 dark:text-white"
      >
        <img
          src="/icons/monitor.webp"
          alt="Build Your Brand"
          width="100"
          height="100"
          loading="eager"
          class="h-[100px] width-[100px] aspect-square overflow-hidden"
        />
        <h3 class="mb-2 text-2xl font-semibold">Build Your Brand</h3>
        <p class="font-light text-gray-500 text-lg dark:text-gray-400 my-8">
          Stand out from the competition and build credibility.
        </p>

        <Button asChild>
          <a
            href="/services#design"
            class="bg-teal-500 text-gray-100 hover:bg-teal-900 hover:text-white rounded-lg px-4 py-2 transition-colors duration-200"
            >Our Approach To Branding</a
          >
        </Button>
      </div>
      <div
        class="flex flex-col items-center p-6 mx-auto max-w-lg text-center text-gray-900 bg-white rounded-lg border border-gray-100 shadow dark:border-gray-600 xl:p-8 dark:bg-gray-800 dark:text-white"
      >
        <img
          src="/icons/rocket.webp"
          alt="Increase Traffic"
          width="100"
          height="100"
          loading="eager"
          class="h-[100px] width-[100px] aspect-square overflow-hidden"
        />
        <h3 class="mb-2 text-2xl font-semibold">Increase Traffic</h3>
        <p class="font-light text-gray-500 text-lg dark:text-gray-400 my-8">
          Attract more organic traffic to your website, by optimizing your
          website for search engines.
        </p>

        <Button asChild>
          <a
            href="/services#seo"
            class="bg-teal-500 text-gray-100 hover:bg-teal-900 hover:text-white rounded-lg px-4 py-2 transition-colors duration-200"
            >How We Optimize Sites</a
          >
        </Button>
      </div>
      <div
        class="flex flex-col items-center p-6 mx-auto max-w-lg text-center text-gray-900 bg-white rounded-lg border border-gray-100 shadow dark:border-gray-600 xl:p-8 dark:bg-gray-800 dark:text-white"
      >
        <img
          src="/icons/banner.webp"
          alt="Grow Your Business"
          width="100"
          height="100"
          loading="eager"
          class="h-[100px] width-[100px] aspect-square overflow-hidden"
        />
        <h3 class="mb-2 text-2xl font-semibold">Grow Your Business</h3>
        <p class="font-light text-gray-500 text-lg dark:text-gray-400 my-8">
          Encourage your visitors to take action, this can lead to more sales
          and revenue for your business.
        </p>

        <Button asChild>
          <a
            href="/services#growth"
            class="bg-teal-500 text-gray-100 hover:bg-teal-900 hover:text-white rounded-lg px-4 py-2 transition-colors duration-200"
            >Why User Experience Matters</a
          >
        </Button>
      </div>
    </div>
  </div>
</section>
