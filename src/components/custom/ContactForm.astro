    <input
      type="hidden"
      name="_redirect"
      value="https://www.sublimeux.com/success"
    />
    <label
      for="name"
      class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
      >Name</label
    >
    <input
      id="name"
      type="text"
      name="name"
      class="bg-gray-50 border-2 border-primaryDrk text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 mb-4"
    />

    <label
      for="email"
      class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
      >Email</label
    >
    <input
      id="email"
      type="email"
      name="email"
      required
      class="bg-gray-50 border-2 border-primaryDrk text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 mb-4"
    />

    <label
      for="message"
      class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
      >Message:</label
    >
    <textarea
      id="message"
      wrap="soft"
      name="message"
      required
      class="border-2 border-primaryDrk"></textarea>
    <button
      type="submit"
      class="border-2 border-primary bg-primaryDrk text-primaryWhite"
      >Submit</button
    >
  </form>
</div>

<style>
  .contact-form {
    margin: 40px 40px;
    min-width: 250px;
    width: 45%;
  }
  label {
    font-size: 16px;
  }

  textarea,
  button {
    border-radius: 5px;
    /* border: 1px solid #cbd5e1; */
    font-size: inherit;
    margin: 15px 0;
    padding: 12px 20px;
    width: 100%;
  }
  button {
    /* background-color: #2bdcd2; */
    /* border: 1px solid #2bdcd2; */

    font-size: 16px;
    width: 50%;
  }
  .hidden {
    clip: rect(0 0 0 0);
    clip-path: inset(50%);
    height: 1px;
    overflow: hidden;
    position: absolute;
    white-space: nowrap;
    width: 1px;
  }
</style>
