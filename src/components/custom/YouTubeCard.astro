---
interface Props {
    videoid: string;
    title: string;
}

const { videoid, title } = Astro.props;
---

<div
    class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden flex flex-col h-full border border-gray-200 dark:border-gray-700"
>
    <div class="aspect-video w-full">
        <lite-youtube videoid={videoid} class="w-full h-full">
            <a
                class="lite-youtube-fallback"
                href={`https://www.youtube.com/watch?v=${videoid}`}
                >Watch on YouTube: "{title}"</a
            >
        </lite-youtube>
    </div>
    <div class="p-4 flex-grow flex flex-col justify-between">
        <h3
            class="text-lg font-bold text-gray-900 dark:text-white line-clamp-2 mt-1"
        >
            {title}
        </h3>
        <a
            href={`https://www.youtube.com/watch?v=${videoid}`}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center mt-4 text-teal-600 dark:text-teal-400 font-semibold hover:underline"
        >
            Watch on YouTube
            <svg class="w-4 h-4 ml-1" fill="currentColor" viewBox="0 0 20 20">
                <path
                    d="M11 3a1 1 0 100 2h2.586l-6.293 6.293a1 1 0 101.414 1.414L15 6.414V9a1 1 0 102 0V4a1 1 0 00-1-1h-5z"
                ></path>
                <path
                    d="M5 5a2 2 0 00-2 2v8a2 2 0 002 2h8a2 2 0 002-2v-3a1 1 0 10-2 0v3H5V7h3a1 1 0 000-2H5z"
                ></path>
            </svg>
        </a>
    </div>
</div>

<script>
    import "@justinribeiro/lite-youtube";
</script>
