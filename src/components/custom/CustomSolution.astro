---
import "aos/dist/aos.css";
import { Image } from "astro:assets";
import VideoCall from "../../assets/images/video-call.webp";
---

<!-- https://gist.github.com/goodreds/3d044027175954984fb96c7407a955ab --><!-- Container -->
<div
  class="relative flex flex-col items-center mx-auto lg:flex-row-reverse lg:mt-12 md:m-0"
>
  <!-- <div class="curve absolute h-[250px] top-0"></div> -->
  <div class="custom-shape-divider-top-1728589509">
    <svg
      data-name="Layer 1"
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 1200 120"
      preserveAspectRatio="none"
    >
      <path
        d="M321.39,56.44c58-10.79,114.16-30.13,172-41.86,82.39-16.72,168.19-17.73,250.45-.39C823.78,31,906.67,72,985.66,92.83c70.05,18.48,146.53,26.09,214.34,3V0H0V27.35A600.21,600.21,0,0,0,321.39,56.44Z"
        class="shape-fill"></path>
    </svg>
  </div>
  <!-- Image Column -->
  <div class="w-full h-64 lg:w-1/2 lg:h-[640px] overflow-hidden">
    <Image
      class="h-full w-full object-cover"
      src={VideoCall}
      alt="Video call"
      height={640}
    />
  </div>
  <!-- Close Image Column -->

  <!-- Text Column -->
  <div
    class="max-w-lg bg-white md:max-w-2xl md:z-10 md:shadow-lg md:absolute md:top-0 md:mt-48 lg:w-3/5 lg:left-0 lg:mt-20 lg:ml-20 xl:mt-24 xl:ml-12"
    data-aos="fade-up"
    data-aos-delay="500"
    data-aos-easing="ease-in-sine"
  >
    <!-- Text Wrapper -->
    <div class="flex flex-col p-12 md:px-16">
      <h2 class="text-2xl font-medium uppercase text-gray-900 lg:text-4xl">
        Experience our <span class="italic text-primaryDrk">quick</span> and <span
          class="italic text-primaryDrk">worry free</span
        > process.
      </h2>
      <ul role="list" class="mb-8 space-y-4 text-left mt-5">
        <li class="flex items-center space-x-3">
          <svg
            class="flex-shrink-0 w-5 h-5 text-green-500 dark:text-green-400"
            fill="currentColor"
            viewBox="0 0 20 20"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              fill-rule="evenodd"
              d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
              clip-rule="evenodd"></path>
          </svg>
          Video call real time collaboration
        </li>
        <li class="flex items-center space-x-3">
          <svg
            class="flex-shrink-0 w-5 h-5 text-green-500 dark:text-green-400"
            fill="currentColor"
            viewBox="0 0 20 20"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              fill-rule="evenodd"
              d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
              clip-rule="evenodd"></path>
          </svg>
          Guaranteed mobile site speeds in the 90%
        </li>
        <li class="flex items-center space-x-3">
          <svg
            class="flex-shrink-0 w-5 h-5 text-green-500 dark:text-green-400"
            fill="currentColor"
            viewBox="0 0 20 20"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              fill-rule="evenodd"
              d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
              clip-rule="evenodd"></path>
          </svg>
          Work directly with one of our expert designers
        </li>
      </ul>
      <!-- Button Container -->
      <div class="mt-8">
        <a
          href="https://forms.gle/68DVC2oHmjpEE2Nm8"
          target="_blank"
          class="inline-block w-full text-center text-xl font-bold text-primaryBlk bg-primary border-solid border-2 border-gray-600 py-2 px-8 hover:bg-primaryDrk hover:text-primaryWhite hover:shadow-md md:w-48 rounded-lg"
          >Start Today!</a
        >
      </div>
    </div>
    <!-- Close Text Wrapper -->
  </div>
  <!-- Close Text Column -->
</div>

