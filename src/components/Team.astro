---
const title = "Our Team";
const description = "Meet the team behind the scenes at the 2020 Hackathon.";

const team = [
  {
    name: "Bonnie Green",
    title: "CEO & Web Developer",
    bio: "Bonnie drives the technical strategy of the flowbite platform and brand.",
    github: "https://www.github.com/bonnie",
    image: "https://flowbite.s3.amazonaws.com/blocks/marketing-ui/avatars/bonnie-green.png"
  },
  {
    name: "Donnie Green",
    title: "CEO & Web Developer",
    bio: "Donnie drives the technical strategy of the flowbite platform and brand.",
    github: "https://www.github.com/bonnie",
    image: "https://flowbite.s3.amazonaws.com/blocks/marketing-ui/avatars/bonnie-green.png"
  },
  {
    name: "Johhny Green",
    title: "CEO & Web Developer",
    bio: "Johnny drives the technical strategy of the flowbite platform and brand.",
    github: "https://www.github.com/bonnie",
    image: "https://flowbite.s3.amazonaws.com/blocks/marketing-ui/avatars/bonnie-green.png"
  },
  {
    name: "Connie Green",
    title: "CEO & Web Developer",
    bio: "Connie drives the technical strategy of the flowbite platform and brand.",
    github: "https://www.github.com/bonnie",
    image: "https://flowbite.s3.amazonaws.com/blocks/marketing-ui/avatars/bonnie-green.png"
  },
];
---

<section class="bg-stone-100 dark:bg-slate-800">
  <div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16 lg:px-6">
    <div class="mx-auto max-w-screen-sm text-center mb-8 lg:mb-16">
      <h2
        class="mb-4 text-4xl tracking-tight font-extrabold text-gray-900 dark:text-white"
      >
        {title}
      </h2>
      <p
        class="font-light text-gray-500 lg:mb-16 sm:text-xl dark:text-gray-400"
      >
        {description}
      </p>
    </div>
    <div class="grid gap-8 mb-6 lg:mb-16 md:grid-cols-2">
      {
        team.map((member) => (
          <div class="items-center bg-gray-50 rounded-lg shadow sm:flex dark:bg-gray-800 dark:border-gray-700">
            <img
              class="w-full rounded-lg sm:rounded-none sm:rounded-l-lg"
              src={member.image}
              alt="Bonnie Avatar"
            />

            <div class="p-5">
              <h3 class="text-xl font-bold tracking-tight text-gray-900 dark:text-white">
                <a href={member.github}>{member.name}</a>
              </h3>
              <span class="text-gray-500 dark:text-gray-400">
                {member.title}
              </span>
              <p class="mt-3 mb-4 font-light text-gray-500 dark:text-gray-400">
                {member.bio}
              </p>
              <ul class="flex space-x-4 sm:mt-0">
                <li>
                  <a
                    href={member.github}
                    class="text-gray-500 hover:text-gray-900 dark:hover:text-white"
                  >
                    <svg
                      class="w-5 h-5"
                      fill="currentColor"
                      viewBox="0 0 24 24"
                      aria-hidden="true"
                    >
                      <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84" />
                    </svg>
                  </a>
                </li>
              </ul>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
